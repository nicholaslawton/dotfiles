configuration {
  font: "Sans-Serif Medium 12";

  drun {
    display-name: "";
  }

  run {
    display-name: "";
  }

  window {
    display-name: "";
  }

  timeout {
    delay: 10;
    action: "kb-cancel";
  }
}

* {
  clear: #00000000;
  glass: #ffffff40;
  tint: #00000040;
  heavy-tint: #000000a0;
}

window {
  transparency: "real";
  background-color: @glass;
  border: 1px;
  border-color: @tint;
  border-radius: 10px;
}

mainbox {
  children: [inputbar, listview];
  padding: 10px;
  spacing: 10px;
}

inputbar {
  background-color: @tint;
  text-color: @heavy-tint;
  children: [prompt, entry];
}

entry {
  text-color: @heavy-tint;
  placeholder-color: @tint;
  padding: 12px 3px;
}

prompt {
  text-color: @heavy-tint;
  padding: 12px;
}

listview {
  columns: 5;
  lines: 3;
  spacing: 10px;
  border: 0px;
  scrollbar: false;
}

element {
  orientation: vertical;
  children: [element-icon, element-text];
  padding: 10px;
}

element.normal.normal {
  background-color: @clear;
  text-color: @heavy-tint;
}

element.alternate.normal {
  background-color: @clear;
  text-color: @heavy-tint;
}

element.selected.normal {
  background-color: @tint;
  text-color: @heavy-tint;
}

element-icon {
  size: 64px;
}

element-text {
  horizontal-align: 0.5;
}
